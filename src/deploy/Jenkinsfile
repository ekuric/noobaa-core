            echo 'CLIENT_ID=199522b3-407d-45eb-b7fb-023d21ab6406' >> .env
            """
            echo 'Adding some agents!'
            sh script: """
            export NVM_DIR=/opt/nvm
            . /opt/nvm/nvm.sh
            #fname=\$(unzip -o /tmp/noobaa-NVA-latest.zip -d  /tmp/|grep "tar.gz"|awk '{ print \$2 }')
