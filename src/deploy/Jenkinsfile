            echo 'Doing account tests!'
            sh script: """
            export NVM_DIR=/opt/nvm
            . /opt/nvm/nvm.sh
            node $WORKSPACE/src/test/qa/account_test.js --server_ip '${noobaa_ip}' --system_ip '${noobaa_ip}'
            """
		}
